@startuml
!include style.puml
skinparam arrowThickness 1.1
skinparam arrowColor STORAGE_COLOR
skinparam classBackgroundColor STORAGE_COLOR

package Storage{

package "UserPrefs Storage" #F4F6F6{
Class "<<interface>>\nUserPrefsStorage" as UserPrefsStorage
Class JsonUserPrefsStorage
}

Class "<<interface>>\nStorage" as Storage
Class StorageManager

package "ExpenditureExpert Storage" #F4F6F6{
Class "<<interface>>\nExpenditureExpertStorage" as ExpenditureExpertStorage
Class JsonExpenditureExpertStorage
Class JsonSerializableExpenditureExpert
Class JsonAdaptedUniqueExpenseList
Class JsonAdaptedTag
}

}

Class HiddenOutside #FFFFFF
HiddenOutside ..> Storage

StorageManager .up.|> Storage
StorageManager -up-> "1" UserPrefsStorage
StorageManager -up-> "1" ExpenditureExpertStorage

Storage -left-|> UserPrefsStorage
Storage -right-|> ExpenditureExpertStorage

JsonUserPrefsStorage .up.|> UserPrefsStorage
JsonExpenditureExpertStorage .up.|> ExpenditureExpertStorage
JsonExpenditureExpertStorage ..> JsonSerializableExpenditureExpert
JsonSerializableExpenditureExpert --> "*" JsonAdaptedPerson
JsonAdaptedPerson --> "*" JsonAdaptedTag

@enduml
